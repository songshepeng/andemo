<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.ssp.andemo.activity.LookforpasswordActivity"
    android:orientation="vertical"
    android:background="@mipmap/beijing"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/back"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/have_number"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/log"
            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/lookforedtext"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/phone"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:hint="86+  |  请输入手机号"
                    android:background="@null"
                    android:textColorHint="#ffffff"
                    />
                <TextView
                    android:id="@+id/Verification_ma"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>


            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="#ffffff"
                />
            <EditText
                android:id="@+id/password"
                android:layout_marginLeft="10dp"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:background="@null"
                />
        </LinearLayout>
        <Button
            android:id="@+id/next"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="下一步"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/Tourist_login"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客登录"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
</LinearLayout>
