<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.ssp.andemo.MainActivity"
    android:background="@mipmap/logbejing"
    android:orientation="vertical">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/back"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:gravity="center_horizontal"
      >
      <ImageView
          android:layout_marginTop="15dp"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:background="@mipmap/log"
          />
  </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
      <LinearLayout
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_marginBottom="20dp"
          >
          <LinearLayout
              android:id="@+id/weixinlog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/xweixin"
              android:gravity="center"
              >
              <ImageView
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:background="@mipmap/weixin"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="微信登录"
                  android:textColor="#FFFFFF"
                  android:layout_marginLeft="10dp"
                  />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/qqlogin"
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/xqq"
              android:gravity="center"
              >
              <ImageView
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:background="@mipmap/qq"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="QQ登录"
                  android:textColor="#FFFFFF"
                  android:layout_marginLeft="10dp"
                  />
          </LinearLayout>
           <TextView
               android:id="@+id/arraylogin"
               android:layout_marginTop="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="其它登录方式"
               android:textColor="#ffffff"
               android:textSize="20sp"
               />

      </LinearLayout>
    </RelativeLayout>

</LinearLayout>
