<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.ssp.andemo.activity.VideoxiangqingActivity"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/hfh"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/like"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/nolike"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/zf"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"

        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/video_touxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            fresco:progressBarImage="@mipmap/lll"
            fresco:roundAsCircle="true"
            />
    </RelativeLayout>
</LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="300dp"
        layout="@layout/video_play"
        ></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="女子翻墙裤子被挂窗户，遭围观"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
         android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1569次播放 今天19:13"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:background="#ccc"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:background="@mipmap/plbj"
            />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拿起手机速来"
                android:textSize="23sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢个沙发"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吧！~"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
